<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_4_0.xsd"
           version="4.0">
    <servlet>
        <servlet-name>router1</servlet-name>
        <servlet-class>web.find</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>router2</servlet-name>
        <servlet-class>web.add</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>router3</servlet-name>
        <servlet-class>web.edit</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>router4</servlet-name>
        <servlet-class>web.remove</servlet-class>
    </servlet>
    /**/
    <servlet-mapping>
        <servlet-name>router1</servlet-name>
        <url-pattern>/rechercher</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>router2</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>router3</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>router4</servlet-name>
        <url-pattern>/remove</url-pattern>
    </servlet-mapping>
</web-app>
